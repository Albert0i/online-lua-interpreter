<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    #verticalDivider {
      left: 50%;
    }
    .no-select {
      user-select: none;
    }
  </style>
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body class="h-screen flex flex-col bg-gray-100">

  <!-- Header -->
  <header class="bg-gray-800 text-white h-20 px-4 flex items-center justify-between">
    <!-- Left Logo -->
    <a href="https://redis.io/docs/latest/develop/programmability/eval-intro/" target="_blank" rel="noopener noreferrer">
      <img src="/logo.png" alt="Logo Left" class="h-10 w-10 rounded-full">
    </a>
  
    <!-- Centered Title and Subtitle -->
    <div class="text-center flex-1">
      <h1 class="text-xl font-semibold">Online Lua Interpreter</h1>
      <p class="text-sm text-gray-300"><%= subtitle %></p>
    </div>
  
    <!-- Right Logo -->
    <a href="https://www.lua.org/docs.html" target="_blank" rel="noopener noreferrer">
      <img src="/luaa.gif" alt="Logo Right" class="h-10 w-10 rounded-full">
    </a>
  </header>

  <!-- Main Layout -->
  <main class="flex-grow relative flex overflow-hidden">

    <!-- Left Panel -->
    <section id="editorPanel" class="flex flex-col w-1/2 p-4 overflow-auto bg-white space-y-2">
      <form action="/" method="POST" class="flex flex-col space-y-2 flex-grow">

        <!-- Parameters Section -->
        <div class="space-y-1">
          <div class="flex items-center space-x-2">
            <label for="keysInput" class="text-sm font-medium whitespace-nowrap">KEYS:</label>
            <input type="text" id="keysInput" name="keys" class="flex-grow p-1 border rounded text-sm" value="<%= keys %>" />
          </div>
          <div class="flex items-center space-x-2">
            <label for="argvInput" class="text-sm font-medium whitespace-nowrap">ARGV:</label>
            <input type="text" id="argvInput" name="argv" class="flex-grow p-1 border rounded text-sm" value="<%= argv %>" />
          </div>
        </div>

        <!-- Code Editor -->
        <textarea id="code" name="code" class="flex-grow p-2 border rounded resize-none font-mono text-sm h-64" placeholder='return "Hello"' autofocus><%= code %></textarea>

        <!-- Action Buttons Row -->
        <div class="flex justify-between items-center">
          <div class="flex space-x-2">
            <button type="submit" class="py-1 px-3 bg-blue-600 text-white rounded text-sm hover:bg-blue-700">Run</button>
            <button type="reset" class="py-1 px-3 bg-gray-300 rounded text-sm hover:bg-gray-400">Reset</button>
          </div>
          <button type="button" onclick="window.open('/LuaQuickReference2.pdf', '_blank')" class="py-1 px-3 bg-yellow-500 text-white rounded text-sm hover:bg-yellow-600">Help</button>
        </div>
      </form>
    </section>

    <!-- Vertical Divider -->
    <div id="verticalDivider"
         class="w-1 bg-gray-400 cursor-col-resize absolute top-0 bottom-0 z-10 no-select">
    </div>

    <!-- Right Panel -->
    <section id="outputPanel" class="flex flex-col w-1/2 p-4 overflow-auto bg-gray-50 space-y-2">

      <!-- Script Toolbar -->
      <div class="flex items-center space-x-2">
        <select name="scriptSelect" id="scriptSelect" class="border rounded px-2 py-1 text-sm">
          <option value="">Select</option>
          <% scripts.forEach(script => { %>
            <option value="<%= script %>" <%= script === lastEdit ? 'selected' : '' %>><%= script %></option>
          <% }) %>
        </select>

        <input type="text" name="scriptName" id="scriptName" value="<%= lastEdit %>" placeholder="Script Name" class="border rounded px-2 py-1 flex-grow text-sm" />

        <button type="button" id="loadBtn" class="px-3 py-1 bg-gray-300 rounded text-sm hover:bg-gray-400">Load</button>
        <button type="button" id="saveBtn" class="px-3 py-1 bg-green-500 text-white rounded text-sm hover:bg-green-600">Save</button>
        <button type="button" id="deleteBtn" class="px-3 py-1 bg-red-500 text-white rounded text-sm hover:bg-red-600">Del</button>
      </div>

    <!-- Output Section -->
    <!-- Full-page container -->
    <div class="h-screen flex flex-col">

      <!-- Output section grows with content -->
      <div class="flex flex-col p-1 space-y-2">
        <!-- Output Label -->
        <h2 class="text-sm font-semibold">Output:</h2>

        <!-- Expanding Output Block -->
        <pre id="output" class="bg-white p-3 border rounded font-mono text-sm text-left whitespace-pre-wrap w-full">
          <%= output %>
        </pre>
      </div>
    </div>

  </main>

  <script>
    // Drag Script + Tab Support
    const divider = document.getElementById('verticalDivider');
    const editorPanel = document.getElementById('editorPanel');
    const outputPanel = document.getElementById('outputPanel');

    divider.addEventListener('mousedown', function (e) {
      e.preventDefault();
      document.addEventListener('mousemove', resizePanels);
      document.addEventListener('mouseup', stopResize);
    });

    function resizePanels(e) {
      const totalWidth = divider.parentElement.offsetWidth;
      const newLeftWidth = e.clientX / totalWidth * 100;
      editorPanel.style.width = `${newLeftWidth}%`;
      outputPanel.style.width = `${100 - newLeftWidth}%`;
      divider.style.left = `${newLeftWidth}%`;
    }

    function stopResize() {
      document.removeEventListener('mousemove', resizePanels);
      document.removeEventListener('mouseup', stopResize);
    }

    // Tab support in textarea
    document.getElementById('code').addEventListener('keydown', function(e) {
      if (e.key === 'Tab') {
        e.preventDefault();
        const start = this.selectionStart;
        const end = this.selectionEnd;
        this.value = this.value.substring(0, start) + '\t' + this.value.substring(end);
        this.selectionStart = this.selectionEnd = start + 1;
      }
    });

    // Handle dropdown change 
    document.addEventListener('DOMContentLoaded', () => {
    const dropdown = document.getElementById('scriptSelect');
    const textbox = document.getElementById('scriptName');

    if (dropdown && textbox) {
      dropdown.addEventListener('change', () => {
        textbox.value = dropdown.value;
      });
    } else {
      console.warn('Dropdown or textbox not found');
    }
  });

  // Handle load script 
  document.addEventListener('DOMContentLoaded', () => {
    const loadBtn = document.getElementById('loadBtn');
    const scriptNameInput = document.getElementById('scriptName');
    const editor = document.getElementById('code'); // adjust if using CodeMirror etc.
    const output = document.getElementById('output');

    loadBtn.addEventListener('click', async () => {
      const scriptName = scriptNameInput.value.trim();
      if (!scriptName) return alert('Script name is empty');

      try {
        const res = await fetch(`/api/v1/load?name=${encodeURIComponent(scriptName)}`);
        const result = await res.json();

        if (result.success) {
          editor.value = result.code; // for <textarea>          
          output.textContent = result.message;
        } else {
          alert(result.message || 'Failed to load script');
        }
      } catch (err) {
        console.error('Load error:', err);
        alert('Error loading script');
      }
    });
  });

  // Handle save script 
  document.addEventListener('DOMContentLoaded', () => {
  const saveBtn = document.getElementById('saveBtn');
  const scriptNameInput = document.getElementById('scriptName');
  const editor = document.getElementById('code');
  const output = document.getElementById('output');

  saveBtn.addEventListener('click', async (e) => {
    e.preventDefault();

    const scriptName = scriptNameInput.value.trim();
    const code = editor.value.trim();

    if (!scriptName || !code) {
      output.textContent = 'Script name and/or code must not be empty';
      return;
    }

    try {
      const res = await fetch('/api/v1/save', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: scriptName, code })
      });

      const result = await res.json();
      output.textContent = result.message || 'Save response received';
      } catch (err) {
        console.error('Save error:', err);
        output.textContent = 'Error saving script';
      }
    });
  });

  // Handle delete script 
  deleteBtn.addEventListener('click', async (e) => {
  //e.preventDefault();
  const scriptNameInput = document.getElementById('scriptName');
  const editor = document.getElementById('code');
  const output = document.getElementById('output');

  const scriptName = scriptNameInput.value.trim();
  if (!scriptName) {
    output.textContent = 'Script name must not be empty';
    return;
  }

  const confirmed = confirm(`Are you sure you want to delete "${scriptName}"?`);
  if (!confirmed) return;

  try {
    const res = await fetch(`/api/v1/delete?name=${encodeURIComponent(scriptName)}`, {
      method: 'DELETE'
    });

    const result = await res.json();
    output.textContent = result.message || 'Delete response received';
  } catch (err) {
      console.error('Delete error:', err);
      output.textContent = 'Error deleting script';
    }
  });

  </script>

</body>
</html>
